<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumgothicbold"
            android:text="책 정보"
            android:textColor="@color/sb_title"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:background="@color/sb_gray3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="@color/sb_title"
                android:textSize="13sp"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저자|"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:letterSpacing="0.2"
                    android:fontFamily="@font/nanumgothicbold"/>

                <TextView
                    android:id="@+id/tv_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:fontFamily="@font/nanumgothic"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출판사|"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:letterSpacing="0.2"
                    android:fontFamily="@font/nanumgothicbold"/>

                <TextView
                    android:id="@+id/tv_pub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:fontFamily="@font/nanumgothic"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출간일|"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:letterSpacing="0.2"
                    android:fontFamily="@font/nanumgothicbold"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:fontFamily="@font/nanumgothic"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN|"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/nanumgothicbold"/>

                <TextView
                    android:id="@+id/tv_isbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="ddd"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:fontFamily="@font/nanumgothic"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별점|"
                    android:textSize="10sp"
                    android:textColor="@color/sb_title"
                    android:letterSpacing="0.2"
                    android:fontFamily="@font/nanumgothicbold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/star_rate"/>


                    <TextView
                        android:id="@+id/tv_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="ddd"
                        android:textSize="10sp"
                        android:textColor="@color/sb_title"
                        android:fontFamily="@font/nanumgothic"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sb_gray2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reading_book_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reading_book_plus"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/reading_book_img_selector"/>

            <TextView
                android:id="@+id/reading_book_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="읽는 책"
                android:textSize="12dp"
                android:textColor="@drawable/reading_book_text_selector"
                android:fontFamily="@font/nanumgothic"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/sb_gray2"/>

        <LinearLayout
            android:id="@+id/wishlist_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wishlist_heart"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/wishlist_img_selector"/>

            <TextView
                android:id="@+id/wishlist_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위시리스트"
                android:textSize="12dp"
                android:textColor="@drawable/wishlist_text_selector"
                android:fontFamily="@font/nanumgothic"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/sb_gray2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:text="책 소개"
                android:textColor="@color/sb_point"
                android:textSize="14sp"
                android:fontFamily="@font/nanumgothicbold"/>

            <TextView
                android:id="@+id/tv_disc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="ddd"
                android:textSize="12sp"
                android:textColor="@color/sb_title"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/nanumgothic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/sb_gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:text="리뷰"
                android:textColor="@color/sb_point"
                android:textSize="14sp"
                android:fontFamily="@font/nanumgothicbold"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/sb_gray3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minion1001"
                            android:textColor="@color/sb_title"
                            android:textSize="11sp"
                            android:fontFamily="@font/nanumgothicbold"/>

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/stars_5"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:text="ddd"
                        android:textSize="11dp"
                        android:textColor="@color/sb_title"
                        android:fontFamily="@font/nanumgothic"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/sb_gray3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minion1001"
                            android:textColor="@color/sb_title"
                            android:textSize="11sp"
                            android:fontFamily="@font/nanumgothicbold"/>

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/stars_5"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:text="ddd"
                        android:textSize="11dp"
                        android:textColor="@color/sb_title"
                        android:fontFamily="@font/nanumgothic"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/sb_gray3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minion1001"
                            android:textColor="@color/sb_title"
                            android:textSize="11sp"
                            android:fontFamily="@font/nanumgothicbold"/>

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/stars_5"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:text="ddd"
                        android:textSize="11dp"
                        android:textColor="@color/sb_title"
                        android:fontFamily="@font/nanumgothic"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/sb_gray3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="minion1001"
                            android:textColor="@color/sb_title"
                            android:textSize="11sp"
                            android:fontFamily="@font/nanumgothicbold"/>

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/stars_5"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:text="ddd"
                        android:textSize="11dp"
                        android:textColor="@color/sb_title"
                        android:fontFamily="@font/nanumgothic"/>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/total_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:text="리뷰 전체 보기"
                android:textColor="@color/sb_gray4"
                android:textSize="11sp"
                android:fontFamily="@font/nanumgothic"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>