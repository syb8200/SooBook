    <TextView
        android:id="@+id/his_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_radius_9"
        android:text="제목"
        android:textSize="13sp"
        android:textColor="@color/sb_title"
        android:fontFamily="@font/nanumgothic"/>
    <TextView
        android:id="@+id/his_content"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/button_radius_9"
        android:scrollbars="vertical"
        android:gravity="left|top"
        android:text="기록 내용 받아올 곳"
        android:textColor="@color/sb_title"
        android:textSize="13sp"
        android:fontFamily="@font/nanumgothic"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/his_last"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.2"
            android:background="@drawable/button_radius_9"
            android:fontFamily="@font/nanumgothic"
            android:gravity="center"
            android:inputType="number"
            android:padding="10dp"
            android:text="마지막 페이지"
            android:textColor="@color/sb_title"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/his_date"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:background="@drawable/button_radius_9"
            android:text="날짜/들어올/곳"
            android:textSize="13sp"
            android:textColor="@color/sb_title"
            android:fontFamily="@font/nanumgothic"/>

    </LinearLayout>
